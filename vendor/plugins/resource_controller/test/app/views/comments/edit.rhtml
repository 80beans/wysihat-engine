<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for(:comment, :url => object_url, :html => { :method => :put }) do |f| %>
  <p>
    <b>Post</b><br />
    <%= f.text_field :post_id %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', object_url %> |
<%= link_to 'Back', collection_url %>