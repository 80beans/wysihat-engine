<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  
<% for tag in @tags %>
  <tr>
    <td><%=h tag.name %></td>
    <td><%= link_to 'Show', object_url(tag) %></td>
    <td><%= link_to 'Edit', edit_object_url(tag) %></td>
    <td><%= link_to 'Destroy', object_url(tag), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_object_url %>