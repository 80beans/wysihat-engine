<h1>Editing product</h1>

<%= error_messages_for :product %>

<% form_for(:product, :url => object_url, :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', object_url %> |
<%= link_to 'Back', collection_url %>